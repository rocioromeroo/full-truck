<div class="video-container">
  <video src="https://gaz.mx/projects/fulltruck/truck_vid.mp4" muted loop autoplay></video>
  <div class="overlay"></div>
  <div class="video-content">
    <h2>TAKE CONTROL </br> OF YOUR FREIGHT.</h2>
  </div>
  <div class="search-form">
    <div class="d-none d-xl-block">
      <%= render 'shared/search_form' %>
    </div>
    <div class="mobile-search-form d-block d-xl-none">
      <%= render 'shared/search_form_mobile' %>
    </div>
  </div>
</div>

<div class="container latest-freigths my-5 d-flex justify-content-center align-items-center">

    <h2 class="latest">Latest Freights</h2>

</div>

<div class="container bg-light">
  <div class="cards p-4">
    <% @freights.each do |freight| %>
      <%= link_to "freights/#{freight.id}" do %>
      <div class="card-container shadow my-3">
        <div class="card-destination ba">
          <% if freight.cover_image.present? %>
            <%= image_tag freight.cover_image, class:"home-cover-image" %>
          <% else %>
            <%= image_tag 'slider-placeholder.jpg', class:"home-cover-image" %>
          <% end %>
        </div>
        <div class="freight-info">
          <p class="freight-title py-2"> <%= freight.departure %> - <%= freight.destination %></p>
          <p class="freight-description py-2"> <%= freight.description %> </p>
        </div>
        <div class="loc-pri d-flex justify-content-between align-items-center pt-2">
          <p class="location"><i class="fas fa-map-marker-alt pr-2"></i> <%= freight.departure %> </p>
          <p class="pricing"><i class="fas fa-money-bill pr-2"></i> <%= freight.price %> </p>
        </div>
        <div class="d-flex justify-content-center mt-3">
          <button class="btn btn-primary rounded-4">Más información</button>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
