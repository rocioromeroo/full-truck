<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="flat-form">
        <div class="col text-center">
          <h1>New Shipment</h1>
        </div>
        <div class="mt-3">
          <div class="mt-3">
            <%= simple_form_for @freight do |f| %>
              <%= f.input :date %>
              <%= f.label :cover_image %>
              <%= f.file_field :cover_image %>
              <%= f.input :departure %>
              <%= f.input :destination %>
              <%= f.input :price %>
              <%= f.input :departure_time %>
              <%= f.input :estimated_time_arrival %>
              <%= f.label :gallery_images %>
              <%= f.file_field :gallery_images, multiple: true %>
              <%= f.association :truck, collection: current_user.trucks, label_method: :label_text %>
              <%= f.simple_fields_for :truck do |t| %>
                <%= t.input :capacity %>
              <% end %>
              <div class="col text-center">
                <%= f.button :submit, class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
