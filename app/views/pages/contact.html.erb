<div class="container my-5">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="flat-form">
        <div class="col text-center">
          <h1>Get in touch</h1>
          <div class="mt-3">
            <div class="mt-3 contact">
                <%= simple_form_for :contact do |f| %>
                  <div class= "contact">
                    <%= f.input :name %>
                    <%= f.input :last_name %>
                    <%= f.input :email %>
                    <%= f.text_area :coments, placeholder: " Leave your coments", class: "contact-text-area" %>
                    <div class="col text-center">
                      <%= f.button :submit, class: "btn btn-primary", value: "Send" %>
                    </div>
                  </div>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
