<div class="container-sm d-flex justify-content-center">
  <div class="internal-container p-4 ">

    <%= form_for :freight, :html =>{:class => ""}, method: :get do |f| %>

      <div class="form-group">
        <%= f.label :departure %>
        <%= f.text_field :departure, placeholder: "Departure City", class:"form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :destination, class:"form-label" %>
        <%= f.text_field :destination, placeholder: "Arrival City", class:"form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :date, class:"form-label" %>
        <%= f.date_field :date, "data-provide" => 'datepicker', class: "form-control"  %>
      </div>

      <div class="form-group">
        <div class="">
          <%= f.submit "Search", class: "btn btn-primary" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
